<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.projetocomedoria">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.ProjetoComedoria">

        <!-- Tela principal (mude para LoginActivity) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CarteiraActivity" />
        <activity android:name=".PerfilActivity" />
        <activity android:name=".CarrinhoActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".CadastroActivity" />
    </application>
</manifest>