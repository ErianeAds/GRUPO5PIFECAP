<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F5E8">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#2E7D32"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_comedoria"
            android:contentDescription="Logo" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Comedoria da Tia"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- BOTÃƒO PERFIL CORRETO -->
        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="ðŸ‘¤"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Barra de Busca -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtBusca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="#FFFFFF"
        app:hintTextColor="#2E7D32"
        app:boxStrokeColor="#2E7D32">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar produtos..."
            android:textColor="#2E7D32"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Categorias -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp">

        <LinearLayout
            android:id="@+id/layoutCategorias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- As categorias serÃ£o adicionadas programaticamente -->

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Lista de Produtos -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CardÃ¡pio"
        android:textColor="#2E7D32"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProdutos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="16dp" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="8dp">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="InÃ­cio"
            android:textColor="#2E7D32"
            android:background="@android:color/transparent"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnCarrinho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Carrinho"
            android:textColor="#2E7D32"
            android:background="@android:color/transparent"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnPedidos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pedidos"
            android:textColor="#2E7D32"
            android:background="@android:color/transparent"
            android:padding="12dp" />

    </LinearLayout>

</LinearLayout>